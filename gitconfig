[user]
  email = to@tristanoneil.com
  name = Tristan O'Neil

[core]
  quotepath = false
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore_global
  editor = $(which nvim)

[color]
  ui = true

[color "branch"]
  current = yellow black
  local = yellow
  remote = magenta

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red reverse
  new = green reverse
  whitespace = white reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan reverse
  branch = magenta

[branch]
  autosetuprebase = always

[alias]
  cleanup = "!b=$(git symbolic-ref --short refs/remotes/origin/HEAD | sed 's@^origin/@@') && git checkout $b && git branch --merged | grep -v \"\\*\\|$b\" | xargs -r git branch -d"

[merge]
  tool = opendiff

[rerere]
  enabled = true

[credential]
	helper = store

[rebase]
  autosquash = true
